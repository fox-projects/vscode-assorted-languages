{
	"$schema": "https://json.schemastore.org/tmLanguage.json",
	"name": "psqlrc",
	"scopeName": "source.psqlrc",
	"patterns": [
		{
			"include": "#comment"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "^\\s*--.*",
					"end": "\\n"
				}
			]
		}
	}
}
