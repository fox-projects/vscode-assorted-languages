{
	"$schema": "https://json.schemastore.org/tmLanguage.json",
	"name": "yarn.lock",
	"scopeName": "text.yarnlock",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#resolved-url" },
		{ "include": "#integrity-hashes" },
		{ "include": "#package-version" },
		{ "include": "#keywords" },
		{ "include": "#keywords-berry" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "^\\s*#",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment"
						}
					},
					"end": "$",
					"name": "comment.line"
				}
			]
		},
		"integrity-hashes": {
			"patterns": [
				{
					"begin": "(integrity|checksum):?\\s+",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						}
					},
					"end": "\\n",
					"patterns": [
						{
							"name": "constant.character",
							"match": "\\S+"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(dependencies|integrity|name|optionalDependencies|resolved|version)\\b[\\s|:]"
				}
			]
		},
		"keywords-berry": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(version|cacheKey|resolution|dependencies|peerDependencies|peerDependenciesMeta|bin|checksum|languageName|linkType)\\b:"
				}
			]
		},
		"package-version": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "\"(?:\\*|[^\"a-zA-Z]*\\d[^\"a-zA-Z]*)\""
				},
				{
					"begin": "(version):?\\s+",
					"beginCaptures": {
						"1": {
							"name": "keyword"
						}
					},
					"end": "\\n",
					"patterns": [
						{
							"name": "entity.name.function",
							"match": "\"?[^\"\\n]+\"?"
						}
					]
				}
			]
		},
		"resolved-url": {
			"name": "string.quoted.double",
			"begin": "\"(?=https?:)",
			"end": "\"",
			"patterns": []
		}
	}
}
