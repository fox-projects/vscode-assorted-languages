{
	"fileTypes": ["hosts"],
	"name": "Hosts File",
	"patterns": [
		{
			"comment": "Comments, anything after a #",
			"name": "comment.line.hosts",
			"match": " *#.*$"
		},
		{
			"comment": "Loopback address like 127.0.0.1",
			"match": "\n\t\t\t\t\t*127(\\.((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])){3}|0\\.0\\.0\\.0|::1?",
			"name": "support.type.built-in.loopback.hosts"
		},
		{
			"comment": "Private IPv4-address like 10.0.0.1",
			"match": "\n\t\t\t\t\t*(10(\\.((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])){3})|(172\\.((1[6-9])|(2[0-9])|(3[0-1]))(\\.((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])){2})|(192\\.168(\\.((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])){2})",
			"name": "string.other.hosts"
		},
		{
			"comment": "IPv4-address",
			"match": "\n\t\t\t\t\t*(((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])\\.){3}((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])",
			"name": "constant.numeric.hosts"
		},
		{
			"comment": "IPv6-address",
			"match": "\n\t\t\t\t\t*(::(ffff(:0{1,4}){0,1}:){0,1}(((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])\\.){3}((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9]))|(fe80:(:[0-9a-fA-F]{1,4}){0,4}%[0-9a-zA-Z]{1,})|(([0-9a-fA-F]{1,4}:){7,7}[0-9a-fA-F]{1,4})|(:((:[0-9a-fA-F]{1,4}){1,7}|:))|(([0-9a-fA-F]{1,4}:){1,4}:(((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9])\\.){3}((25[0-5])|(2[0-4][0-9])|(1[0-9][0-9])|([1-9][0-9])|[0-9]))|([0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6}))|(([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5})|(([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4})|(([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3})|(([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2})|(([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4})|(([0-9a-fA-F]{1,4}:){1,7}:)",
			"name": "constant.numeric.hosts"
		},
		{
			"comment": "hostname",
			"match": " *[\\w\\.-]*",
			"name": "constant.variable.hosts"
		}
	],
	"scopeName": "text.hosts",
	"uuid": "ecd32622-b5c9-11e4-bfd8-6c4008b851aa"
}
