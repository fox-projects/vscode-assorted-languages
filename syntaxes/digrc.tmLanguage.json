{
	"$schema": "https://json.schemastore.org/tmLanguage.json",
	"name": "digrc",
	"scopeName": "source.digrc",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#option"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "^\\s*#.*",
					"end": "\\n"
				}
			]
		}
	}
}
